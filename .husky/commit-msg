echo "ğŸ” Checking commit message..."

commit_msg_file=$1
commit_msg=$(cat "$commit_msg_file")

# Example: Enforce Conventional Commits (e.g., feat:, fix:, chore:, etc.)
conventional_regex="^(feat|fix|docs|style|refactor|test|chore|ci|perf|build|revert)(\(.+\))?: .{1,}"

if ! echo "$commit_msg" | grep -Eq "$conventional_regex"; then
  echo "âŒ Invalid commit message."
  echo "ğŸ”§ Format must follow Conventional Commits (e.g., feat: add login button)"
  exit 1
fi

echo "âœ… Commit message is valid!"
exit 0
